 
<div class="results-block">
  <%= render 'layouts/messages' %>
</div>
<h1>Friends search Result</h1>
<% if @friends %>
<div class="card card-header results-block">
<table class = "col-md-12 table table-bordered table-hover"> 

<table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @friends.each do |friend| %>
                <tr>
                    <td><%= friend.full_name %></td>
                    <td><%= friend.email %></td>
                    <td><%= link_to "View profile",'#',class: "btn btn-sm btn-success" %></td>
                    <td> <%= button_to 'Follow friend', '#',class: "btn btn-sm btn-success", method: :post %></td>
                </tr>
            <% end %>
           </tbody>
        </table>
</div>
<% end %>